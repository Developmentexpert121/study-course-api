{
  "compilerOptions": {
    
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": false,
    "baseUrl": "src", 
    // "paths": {
    //   "@controllers/*": [
    //     "controllers/*"
    //   ] // This mapping is relative to "baseUrl"
    // }
    "paths": {
      "@controllers/*": ["src/controllers/*"],  // Update path
      "express": ["node_modules/express"]  // Force express to resolve correctly
    }
  },
  "include": [
    "src",
  ]
}