{
  "compilerOptions": {
    
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
    ],
    
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": false,
    "baseUrl": ".", 
    // "paths": {
    //   "@controllers/*": [
    //     "controllers/*"
    //   ] // This mapping is relative to "baseUrl"
    // }
    "paths": {
      "@controllers/*": ["src/controllers/*"],  // Update path
    }
  },
  "include": ["src/**/*"]
}